#!/usr/bin/env bash
set -e

STATUS=0
NO_FAIL=false
NO_GITHUB=false
OUTPUT_FILE="unsafe-output.txt"
SUMMARY_FILE="unsafe-output.md"

# Parse command-line arguments
while [[ $# -gt 0 ]]; do
    case "$1" in
        --no-fail)
            NO_FAIL=true
            shift
            ;;
        --no-github)
            NO_GITHUB=true
            shift
            ;;
        --output)
            OUTPUT_FILE="$2"
            if [[ "$OUTPUT_FILE" == *.txt ]]; then
                SUMMARY_FILE="${OUTPUT_FILE%.txt}.md"
            else
                SUMMARY_FILE="${OUTPUT_FILE}.md"
            fi
            shift 2
            ;;
        *)
            echo "Unknown argument: $1"
            exit 1
            ;;
    esac
done

# Cleanup old files
[ -f "$SUMMARY_FILE" ] && rm "$SUMMARY_FILE"
[ -f "$OUTPUT_FILE" ] && rm "$OUTPUT_FILE"

# Run cargo-geiger
cargo geiger --target x86_64-unknown-linux-gnu 2>&1 | tee -a "$OUTPUT_FILE"

# Create summary
echo "### ðŸ”’ Unsafe Code Scan Report (cargo geiger)" >> "$SUMMARY_FILE"
echo "" >> "$SUMMARY_FILE"
echo '```' >> "$SUMMARY_FILE"
cat "$OUTPUT_FILE" >> "$SUMMARY_FILE"
echo '```' >> "$SUMMARY_FILE"
echo "" >> "$SUMMARY_FILE"

# Check for unsafe code
if grep -q "unsafe" "$OUTPUT_FILE"; then
    echo "âš ï¸ Unsafe code detected." >> "$SUMMARY_FILE"
    $NO_FAIL || exit 1
else
    echo "âœ… No unsafe code found." >> "$SUMMARY_FILE"
fi

# Append to GitHub summary if enabled
if [ "$NO_GITHUB" = false ] && [ -f "$GITHUB_STEP_SUMMARY" ]; then
    cat "$SUMMARY_FILE" >> "$GITHUB_STEP_SUMMARY"
fi

exit $STATUS
